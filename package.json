{
    "name": "alanmorel",
    "version": "0.1.0",
    "author": "Alan Morel",
    "license": "MIT",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/AlanMorel/alanmorelcom.git"
    },
    "scripts": {
        "build-dev": "vue-cli-service build --mode development --dest dist/development --target app --watch",
        "build-prod": "vue-cli-service build --mode production --dest dist/production --target app --modern",
        "build-server": "tsc --project ./server/tsconfig.json && tscpaths -p ./server/tsconfig.json -s ./server -o ./dist/server",
        "lint-app": "eslint ./src --fix",
        "lint-server": "eslint ./server --fix",
        "server": "nodemon --config ./nodemon.config.json server/core/Server.ts --watch server",
        "server-static": "node ./dist/server/core/Server.js",
        "server-runtime": "pm2-runtime start ./dist/server/core/Server.js --env production --instances max",
        "build-all": "yarn build-prod && yarn run build-server",
        "start": "yarn server-runtime",
        "docker-up-prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --detach"
    },
    "dependencies": {
        "core-js": "^3.16.2",
        "ejs": "^3.1.6",
        "express": "^4.17.1",
        "vue": "^3.2.0-beta.8",
        "vue-router": "^4.0.0-rc.6"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^16.7.1",
        "@types/webpack-env": "^1.16.2",
        "@typescript-eslint/eslint-plugin": "^4.29.3",
        "@typescript-eslint/parser": "^4.29.3",
        "@vue/cli-plugin-babel": "^5.0.0-beta.3",
        "@vue/cli-plugin-eslint": "^5.0.0-beta.3",
        "@vue/cli-plugin-router": "^5.0.0-beta.3",
        "@vue/cli-plugin-typescript": "^5.0.0-beta.3",
        "@vue/cli-service": "^5.0.0-beta.3",
        "@vue/compiler-sfc": "^3.2.4",
        "@vue/eslint-config-prettier": "^6.0.0",
        "@vue/eslint-config-typescript": "^7.0.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.1",
        "eslint-plugin-security": "^1.4.0",
        "eslint-plugin-vue": "^7.16.0",
        "nodemon": "^2.0.12",
        "prettier": "^2.3.2",
        "sass": "^1.38.1",
        "sass-loader": "^12.1.0",
        "ts-node": "^10.2.1",
        "tsc-alias": "^1.3.9",
        "tsconfig-paths": "^3.10.1",
        "tscpaths": "^0.0.9",
        "typescript": "^4.3.5"
    }
}
