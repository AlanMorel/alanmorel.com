{
    "compilerOptions": {
        "strict": true,
        "module": "ESNext",
        "jsx": "preserve",
        "moduleResolution": "Node",
        "target": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "types": ["vite/client"],
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "rootDir": "./",
        "outDir": "./dist",
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "ts-node": {
        "esm": true
    },
    "lib": ["esnext"]
}
